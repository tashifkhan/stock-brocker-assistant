# Example environment variables for SMTP email sending
# Copy this file to `.env` in the `backend/` folder and fill values before running.

# SMTP server host (required)
EMAIL_HOST=smtp.example.com

# SMTP server port (required). Typical values: 25, 587 (STARTTLS), 465 (SSL)
EMAIL_PORT=587

# Username and password for SMTP auth (optional if server allows anonymous send)
EMAIL_USER=your-smtp-username
EMAIL_PASSWORD=your-smtp-password

# Use STARTTLS? (true/false). Set to true for ports like 587.
EMAIL_USE_TLS=true

# Use implicit SSL (true/false). Set to true for port 465.
EMAIL_USE_SSL=false

# Default From address used if not provided when calling send_email
EMAIL_FROM=your-name@example.com

# Optional: a flag for the example script to actually attempt sending
# Set to true to allow backend/email_service/example_send.py to send an email
EMAIL_SEND_TEST=false

# Optional recipient used by the example script (when EMAIL_SEND_TEST=true)
TEST_EMAIL_TO=recipient@example.com


# Google Gemini API KEY
GOOGLE_API_KEY=your-google-gemini-api-key

